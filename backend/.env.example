# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env in the backend directory
# ============================================

# ============================================
# REQUIRED - Server Configuration
# ============================================
PORT=3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# REQUIRED - Database Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017/jobneuron

# ============================================
# REQUIRED - Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# REQUIRED - JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d
COOKIE_SECRET=your-cookie-secret-key-change-in-production

# ============================================
# REQUIRED - Cloudflare R2 Storage
# ============================================
CLOUDFLARE_R2_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=jobneuron-resumes

# ============================================
# REQUIRED - OpenAI API
# ============================================
OPENAI_API_KEY=your-openai-api-key

# ============================================
# OPTIONAL - Google OAuth
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ============================================
# OPTIONAL - Email Service
# ============================================
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@jobneuron.com
EMAIL_PROVIDER=resend

# ============================================
# OPTIONAL - Automation Worker
# ============================================
AUTOMATION_WORKER_URL=http://localhost:3002

# ============================================
# OPTIONAL - n8n Integration
# ============================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...

# ============================================
# OPTIONAL - Cloudflare Images
# ============================================
CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-account-hash
